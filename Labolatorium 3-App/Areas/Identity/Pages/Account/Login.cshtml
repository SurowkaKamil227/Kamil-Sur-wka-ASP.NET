@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #1E272E;
            color: #FFFFFF;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 5%;
        }

        .card {
            background-color: #20262B;
            border: 1px solid #2C3338;
            border-radius: 8px;
        }

        .card-title {
            color: #FFFFFF;
        }

        .form-floating {
            position: relative;
            margin-bottom: 20px;
        }

        .form-control {
            background-color: #2C3338;
            color: #FFFFFF;
            border: 1px solid #2C3338;
            border-radius: 5px;
        }

            .form-control:focus {
                background-color: #364042;
                color: #FFFFFF;
            }

            /* Dodaj kolor tekstu dla wprowadzonego tekstu */
            /* Dostosuj kolor tekstu po automatycznym wypełnieniu pola formularza */
            .form-control:-webkit-autofill {
                -webkit-text-fill-color: #FFFFFF;
                transition: background-color 5000s ease-in-out 0s;
            }

                /* Dodaj kolor tekstu dla automagicznie wypełnionego tekstu */
                .form-control:-webkit-autofill,
                .form-control:-webkit-autofill:hover,
                .form-control:-webkit-autofill:focus,
                .form-control:-webkit-autofill:active {
                    transition-delay: 9999s;
                }
        .form-label {
            color: #61dafb;
        }

        .btn-primary {
            background-color: #61dafb;
            border: 1px solid #61dafb;
        }

            .btn-primary:hover {
                background-color: #4fa3d1;
                border: 1px solid #4fa3d1;
            }

        a {
            color: #61dafb;
        }

            a:hover {
                color: #4fa3d1;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center">@ViewData["Title"]</h2>
                        <hr />

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                            </div>

                            <div class="mt-3">
                                <p class="text-center">
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p class="text-center">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p>
                                <p class="text-center">
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4 justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <hr />

                        @if (Model.ExternalLogins?.Count == 0)
                        {
                            <div class="text-center">
                                <p>
                                    There are no external authentication services configured. See this
                                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                        article
                                        about setting up this ASP.NET application to support logging in via external services
                                    </a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="text-center">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-primary m-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section>
        <partial name="_ValidationScriptsPartial" />
    </section>
</body>
</html>
